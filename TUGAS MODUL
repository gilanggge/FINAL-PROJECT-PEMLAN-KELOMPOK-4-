				break;
		}	
}

void soal1f()  //membuat fungsi soal1f
{
	printf("Soal 1 Modul 6\n\n");
	
	char nama[100]; //mendeklarasikan variabel tipe data char
	double no_ktp; //mendeklarasikan variabel tipe data doubel
	int presiden; //mendeklarasikan variabel tipe data int
	
	printf ("masukan nama anda : ");
	scanf ("%s",nama);	//menginputkan nama 
	
	printf ("masukan no ktp anda : ");
	scanf ("%lf",&no_ktp);	//menginputkan no ktp	
	
	printf ("anda memilih no 1.Jokowi 2.Prabowo : ");
	scanf ("%d",&presiden); //menginputkan presiden yang ingin dipilih
	
	printf ("nama anda = %s \n", nama); //menampilkan nama
	printf ("no KTP anda = %.lf \n", no_ktp); //menampilkan no ktp
	
	if (presiden == 1) //melakukan percabangan if else jika memilih 1 maka akan masuk ke presiden == 1
	{
		printf ("anda memilih Presiden 1.Jokowi");	//mencetak anda memilih presiden jokowi
	}
		else if (presiden ==2) //melakukan percabangan if else jika memilih 2 maka akan masuk ke presiden == 2
		{
		printf ("anda memilih Presiden 2.Prabowo"); //mencetak anda memilih presiden Prabowo
		}
	
	else { //melakukan percabangan if else jika memilih angka selain 1 dan 2
		printf ("anda menginput no yang salah"); //menalpilkan no yang anda input salah
	}
	printf("\n\n");
}

void soal2f() //membuat fungsi soal2f
{
	printf("Soal 2 Modul 6\n\n");
	
	char a[20]; //inisialisasi tipe data variable char dengan jumlah elemen 20
	int jmlh,b,c; 
	
	printf("Masukkan Jumlah Karakter : ");
	scanf("%d", &jmlh); //kode program untuk input variable jmlh
	
	for(b=0;b<jmlh;b++) /*kode program akan dijalankan apabila nilai dalam () bernilai true, dan terus looping
	sampai bernilai false, setiap looping nilai b bertambah 1*/
	{
		printf("Masukkan Huruf ke%d : ", b+1);
		scanf("%s", &a[b]); //menginputkan huruf
	}
	for(c=jmlh-1;c>=0;c--)/*kode program akan dijalankan apabila nilai dalam () bernilai true, dan terus looping
	sampai bernilai false, setiap looping nilai c berkurang 1*/
	{
		for(b=0;b<=c;b++) //melakukan perulangan for b=0 hingga b<=c , jika nilai bernilai true akan terus menjalankan perulangan dan jika nilai false akan berhenti perulangan tersebut
		{
			printf("%c", a[b]);//menampilkan huruf
		}
		printf("\n");
	}
	printf("\n\n");
}
 
void soal3af() //membuat fungsi soal3af
{
	printf("Soal 3 a Modul 6\n\n");
	
	int n, i, m; //mendeklarasikan variabel tipe data int
    float no[50], jmlh, avg; //mendeklarasikan variabel tipe data float

    printf("Masukkan Jumlah Angka: ");
    scanf("%d", &n); //menginputkan jumlah angka
    while (n>50||n<1){ //melakukan perulangan while
        printf("Angka Harus Antara 1 - 50.\n");  
        printf("Masukkan Angka: "); //menginputkan angka
        scanf("%d", &n);
    }
	
	for (i=0;i<n;i++){ //melakukan perulangan for i=0 hingga i<n , jika nilai bernilai true akan terus menjalankan perulangan dan jika nilai false akan berhenti perulangan tersebut
        printf("Masukkan Angka ke-%d = ", i + 1);
        scanf("%f", &no[i]); //menginputkan angka
        jmlh += no[i];
    } 
    
    avg = jmlh/n; //rumus rata rata
    printf("Rata-Rata = %.2f", avg); //menampilkan rata rata 
    
	printf("\n\n");
}

void soal3bf() //membuat fungsi soal3bf
{
	printf("Soal 3 b Modul 6\n\n");
		
	int n,i,modus,j,a,b=0; //mendeklarasikan variabel tipe data int

	printf("Berapa angka = ");
	scanf("%d", &n); //menginputkan jumlah angka angka yang ingin di inputkan
	int m[n];
	
	for(i=0;i<n;i++){ //melakukan perulangan for dari i=0 hingga i<n , jika nilai bernilai true akan terus menjalankan perulangan dan jika nilai false akan berhenti perulangan tersebut
		scanf("%d", &m[i]); //menginputkan angka
	}
	
	modus =m[0]; //fungsi menghitung modus
	
	for(i=0;i<n;i++){ //melakukan perulangan for dari i=0 hingga i<n , jika nilai bernilai true akan terus menjalankan perulangan dan jika nilai false akan berhenti perulangan tersebut
		a=0;
		for(j=0;j<n;j++){ //melakukan perulangan for dari j=0 hingga j<n , jika nilai bernilai true akan terus menjalankan perulangan dan jika nilai false akan berhenti perulangan tersebut
			if(m[i] == m[j])
			a++;
		}
		if(a > b){ //melakukan perulangan if else untuk menentukan nilai yang bernilai true a>b
			modus = m[i]; //fungsi modus
			b=a;//b menggantikan nilai a
		}else if(a == b){ //melakukan perulangan if else untuk menentukan nilai yang bernilai true a==b
			if(m[i]>modus){
				b=a;//b menggantikan nilai a
				modus=m[i]; //fungsi modus
			}
		}
	}
	
	printf("modusnya adalah %d yang banyaknya %d", modus,b); //mencetak modus dan jumlah angka yang di input
	
	printf("\n\n");
}

void soal4f()//membuat fungsi soal4bf
{
	printf("Soal 4 Modul 6\n\n");
	
	char x[10]; //inisialisasi tipe data untuk variabel x dan y dengan jumlah elemen 10
	char y[10];
	
	printf("Masukkan Nama Depan : "); //menginputkan nama depan
	scanf("%s", &x);
	printf("Masukkan Nama Belakang : "); //menginputkan nama belakang
	scanf("%s", &y);
	printf("Nama Lengkap : %s %s", x, y); //menampilkan output gabungan variabel nama depan dan belakang
	printf("\n\n");
}	

void soal5f()//membuat fungsi soal5f
{
	printf("Soal 5 Modul 6\n\n");
	
	char nama[60]; //mendeklarasikan variabel tipe data char
	char insert;
	int indeks, menu; //mendeklarasikan variabel tipe data int
	
	printf("Menu Program: (Masukkan angka untuk melanjutkan)\n");
	printf("1. Insert karakter pada indeks x \n");
	printf("2. Insert array pada indeks x \n");
	printf("3. Pencarian substring/teks\n");
	printf("4. Menggabungkan 2 buah string/teks\n ");
	
	printf("Masukkan menu yang anda pilih : ");
	scanf("%i", &menu); //menginputkan menu yang ingin di pilih
	printf("--------------------------------------------------\n");
	
	switch(menu) //fungsi switch untuk memilih menu
	{
		case 1: //masuk kedalam fungsi case 1
		{
			printf("Masukkan nama: "); //menginputkan nama 
			getchar();
			gets(nama);
			printf("--------------------------------------------------\n");
			printf("Nama yang anda masukkan: %s\n", nama); //menampilkan nama yang di inputkan sebelumnya
			printf("--------------------------------------------------\n");
			
			printf("Indeks ke berapa dari nama anda yang ingin anda ubah? (dihitung mulai dari 0)\n");
			printf("Masukkan inputan: "); //menginputkaan index yang ingin di ubah dihitung dari 0
			scanf("%i", &indeks); 
			
			printf("Masukkan karakter: ");
			getchar(); //menginputkan karakter yang ingin di ganti
			insert = getche();
			printf("\n--------------------------------------------------\n");
			
			printf("Indeks[%i] dari nama anda: %c\n", indeks, nama[indeks]);
			nama[indeks] = insert; //menampilkan index dan nama dari index sebelum di rubah
			printf("--------------------------------------------------\n");
			
			printf("Indeks[%i] setelah diubah: %c\n", indeks, nama[indeks]); //menampilkan index dan nama dari index sebelum di rubah setelah dirubah
			printf("--------------------------------------------------\n");
			
			printf("Nama setelah diubah: %s\n", nama); //menampilkan nama setelah di rubah
			break;
		}
		case 2: //masuk kedalam fungsi case 2
		{
			int p,i; //mendeklarasikan variabel tipe data int
			
			printf("Masukkan panjang array: ");
			scanf("%i", &p); //menginputkan panjang array
			printf("--------------------------------------------------\n");
			
			int gudangka[p];
			
			for (i=0; i<p; i++) //melakukan perulangan for dari i=0 hingga i<p , jika nilai bernilai true akan terus menjalankan perulangan dan jika nilai false akan berhenti perulangan tersebut
			{
				printf("Masukkan nilai indeks[%i] = ", i);
				scanf("%i", &gudangka[i]); //menginput nilai index
			}
			
			printf("--------------------------------------------------\n");
			printf("| Isi array awal |\n");
			printf("------------------");
			
			for(i=0; i<p; i++){ //melakukan perulangan for dari i=0 hingga i<p , jika nilai bernilai true akan terus menjalankan perulangan dan jika nilai false akan berhenti perulangan tersebut
				printf("\nNilai indeks[%i] = %i", i, gudangka[i]); //menampilkan nilai index
			}
			
			printf("\n--------------------------------------------------\n");
			printf("Masukkan indeks ke berapa yang ingin diubah: ");
			scanf("%i", &indeks); // input nilai index yang ingin dirubah
			
			printf("Masukkan nilai angka: ");
			scanf("%i", &gudangka[indeks]); //mennginput nilai angka 
			printf("--------------------------------------------------\n");
			
			printf("| Isi array setelah diubah |\n");
			printf("----------------------------");
			
			for(i=0; i<p; i++){ //melakukan perulangan for dari i=0 hingga i<p , jika nilai bernilai true akan terus menjalankan perulangan dan jika nilai false akan berhenti perulangan tersebut
				printf("\nNilai indeks[%i] = %i", i, gudangka[i]); //menampilkan nilai index yang telah di ubah
			}
			break;
		}
		case 3: //masuk kedalam fungsi case 3
		{
			
			char search[60]; //mendeklarasikan variabel tipe data char
			char* total;
			
			printf("Masukkan nama: ");
			getchar();
			gets(nama); //menginput nama
			printf("--------------------------------------------------\n");
			
			printf("Nama yang anda masukkan: %s\n", nama); //menampilkan nama yang telah di input sebelumnya
			printf("--------------------------------------------------\n");
			
			printf("Kata/teks apa yang ingin anda cari? ");
			gets(search);//menginput kata yang ingin di cari
			printf("--------------------------------------------------\n");
			
			total = strstr(nama, search);//fungsi untuk total untuk menggambung string nama dan kata yang di cari
			
			printf("Kata/teks yang anda cari yaitu %s di %s adalah: ", search, nama); //menampilkan kata yang di cari
			if(total == NULL){//melakukan percabangan if else jika total == null
				printf("Tidak ditemukan"); //menampikan tidak ditemukan
			}else{
				printf("%s", total); //menampilkan variabel total
			}
			
			break;
		}
		case 4: //masuk kedalam fungsi case 4
		{
			char kalimat1 [100];  //mendeklarasikan variabel tipe data char
			char kalimat2[] = ",Sedang belajar di UPN Veteran Jawa Timur"; 
	
			printf ("masukan nama anda : ");
			scanf ("%s",kalimat1);	//menginput nama 
	
			strcat(kalimat1, kalimat2); //menggabungkan 2 buah string menjadi satu
	
			printf("%s", kalimat1); //menampilkan hasil 2 buah string
			break;
		}
		
	}
	printf("\n\n");
}

//KESYA NURSYAHADA-21081010120-B081
void mod7() //membuat fungsi modul 7
{
	int pil; //deklarasi variabel yang akan digunakan
	system("cls"); //membersihkan layar
	printf("======== PEMROGRAMAN FUNGSI / SUBRUTIN ========\n\n\n");
	printf("Menu Program Penerapan Fungsi / Subrutin : \n\n");
	printf("1. 1a Kerjakan soal-soal di modul 1 dengan menggunakan konsep fungsi yang tanpa passing parameter\n");
	printf("2. 1b Kerjakan soal-soal di modul 1 dengan menggunakan konsep fungsi yang dengan passing parameter\n");
	printf("3. 2a Kerjakan soal-soal di modul 2 dengan menggunakan konsep fungsi yang tanpa passing parameter\n");
	printf("4. 2b Kerjakan soal-soal di modul 2 dengan menggunakan konsep fungsi yang dengan passing parameter\n");
	printf("5. 3 Menghitung luas lingkaran dengan input panjang jariÃƒÂ¢Ã¢â€šÂ¬Ã¢â‚¬Å“jari lingkaran menggunakan fungsi\n");
	printf("6. 4 Melakukan beberapa perhitungan dengan menggunakan ketiga rumus (menu)\n");
	printf("(Masukkan 0 untuk kembali)\n\n");
	printf("Masukkan Pilihan Menu : "); // memasukkan menu yang dipilih
	scanf("%d",&pil); //menyimpan pilihan yang dipilih dalam variabel pil
	system("cls");
	switch(pil) //masuk ke percabangan switch case
	{
		case 1: //masuk ke pil 1
			pil1g(); //menuju ke progran pil1g
			break; //keluar dari case
		case 2:
			pil2g();
			break;
		case 3:
			pil3g();
			break;
		case 4:
			pil4g();
			break;
		case 5:
			pil5g();
			break;
		case 6:
			pil6g();
			break;
		default: //apabila memilih selain pil 1- 6
			break;
	}
}
	
//tanpa pasing parameter
int jabatana() //deklarasi fungsi jabatana
{
	int n; //deklarasi variabel yang akan digunakan
	if(n<=5){ //melalukan branching sesuai kondisi
		printf("Operator");
	}else if(n>=1, n<=8)
		printf("Staff");
	else if(n>8, n<=10)
		printf("Eksekutif");
	else if(n>10, n<=13)
		printf("Senior Eksekutif");
	else if(n>13, n<=16)
		printf("Asisten Manager");
	else if(n>13, n<=20)
		printf("Manager");
	else if(n>20)
		printf("ANDA SALAH MEMASUKAN");
}

void pil1g() //membuat fungsi pilihan 1 tanpa pasing parameter
{
	int n; //deklarasi variabel yang akan digunakan
	printf("Hasil Nilai Tes \n"); //menampilkan perintah untuk memasukkan hasil nilai tes
	scanf("%d",&n); //menyimpan hasil inputan nilai tes dengan variabel n
	printf("Jabatan Anda Adalah \n"); //menampilkan jabatan sesuai dengan grade pada nilai hasil tes yang dimasukkan
	jabatana(); //memanggil fungsi jabatana
}

//dengan pasing parameter
int jabatanb() //deklarasi fungsi jabatanb
{
	int n; //deklarasi variabel yang akan digunakan
	printf("Hasil Nilai Tes \n"); //menampilkan perintah untuk memasukkan hasil nilai tes 
	scanf("%d",&n);  //menyimpan hasil inputan nilai tes dengan variabel n
}

void pil2g() //membuat fungsi pilihan 2 dengan pasing parameter
{
	int n; //deklarasi variabel yang akan digunakan
	jabatanb(); //memanggil fungsi jabatanb
	if(n<=5){ //melalukan branching sesuai kondisi
		printf("Operator");
	}else if(n>=1, n<=8)
		printf("Staff");
	else if(n>8, n<=10)
		printf("Eksekutif");
	else if(n>10, n<=13)
		printf("Senior Eksekutif");
	else if(n>13, n<=16)
		printf("Asisten Manager");
	else if(n>13, n<=20)
		printf("Manager");
	else if(n>20)
		printf("ANDA SALAH MEMASUKAN");
}

//tanpa passing parameter
void batasana(int batas); //deklarasi fungsi
void batasana(int batas) //deklarasi variabel yang akan digunakan
{
	for(int i=1;i<=batas;i++) //perulangan for
	{
		if(i%2==0) //jika i:2 tidak memiliki sisa
		{
			printf("%i",i); //maka menampilkan nilai i
			printf("\n");
		}
	}
}

void pil3g() //membuat fungsi pilihan 3 tanpa pasing parameter
{
	int i,batas; //deklarasi variabel yang akan digunakan
	printf("masukkan batasan angka : "); //menampilkan perintah untuk memasukkan batasan angka
	scanf("%i",&batas); //menyimpan hasil inputan batasan angka dengan variabel batas
	batasana(batas); //memanggil fungsi
}

//dengan pasing parameter
void batasanb() //deklarasi fungsi
{
	int i,batas; //deklarasi variabel yang akan digunakan
	printf("masukkan batasan angka : "); //menampilkan perintah untuk memasukkan batasan angka
	scanf("%i",&batas); //menyimpan hasil inputan batasan angka dengan variabel batas
}

void pil4g() //membuat fungsi pilihan 3 dengan pasing parameter
{
	int i,batas; //deklarasi variabel yang akan digunakan
	batasanb(); //memanggil fungsi
		for(i=1;i<=batas;i++) //perulangan for
	{
			if(i%2==0) //jika i:2 tidak memiliki sisa
		{
			printf("%i",i); //maka menampilkan nilai i
			printf("\n");
		}
	}
}

//tanpa passing parameter
int rumus7(int r); //deklarasi fungsi
int rumus7(int r) //deklarasi variabel yang akan digunakan
{
	int luas; //deklarasi variabel yang akan digunakan
	luas = 3.14*r*r; //rumus luas
	return luas; //mengakhiri fungsi luas
}

void pil5g() //membuat fungsi pilihan 3 tanpa pasing parameter
	{
	int r, luas; //deklarasi variabel yang akan digunakan
	
	printf("Menghitung Luas Lingkaran\n");
	printf("Masukkan panjang r = "); //menampilkan perintah untuk memasukkan panjang
	scanf("%d",&r); //menyimpan hasil inputan panjang dengan variabel r
	
	luas = rumus7(r); //rumus luas memanggil dari fungsi
	
	printf("\nluas Lingkaran = %d",luas); //menampilkan hasil perhitungan luas
	}
	
//dengan passing parameter
float rumus1(float A,float N) //menggunakan float karena dapat menampung data berupa pecahan
{
	float B1; //deklarasi float dalam variabel B1
	B1=(A+N)/2; //rumus B1
}

float rumus2(float A,float N)
{
	float B2;
	B2=A*N;
}

float rumus3(float A,float N)
{
	float B3;
	B3=(A*A)-N;
}

void pil6g() ////membuat fungsi pilihan 3 dengan pasing parameter
{
	float A,N,B; //menggunakan float agar bisa menyimpan data berupa angka pecahan
	int X; //deklarasi variabel yang digunakan
	printf("masukkan nilai A (1 s/d 25) : "); //menampilkan perintah untuk memasukkan nilai A
	scanf("%f",&A); //menyimpan hasil inputan nilai dengan variabel A
	printf("masukkan nilan N (1 s/d 25) : "); //menampilkan perintah untuk memasukkan nilai N
	scanf("%f",&N); //menyimpan hasil inputan nilai dengan variabel N
	printf("pilihan rumus : \n"); //menampilkan pilihan rumus
	printf("1. B = (A+N)/2 \n");
	printf("2. B = A*N \n");
	printf("3. B = (A*A)-N \n");
	printf("masukkan pilihan rumus : "); //menampilkan perintah untuk memasukkan pilihan rumus
	scanf("%i",&X); //menyimpan hasil inputan nilai dengan variabel X
	
	if(X==1) //melalukan branching sesuai kondisi
	{
		B=rumus1(A,N);
	}
	else if(X==2)
	{
		B=rumus2(A,N);
	}
	else if(X==3)
	{
		B=rumus3(A,N);
	}
	else
	{
		printf("inputan salah!");
	}
	printf("Nilai B adalah %.2f\n", B); //menampilkan nilai B dari perhitungan sesuai inputan
}	
	
	

