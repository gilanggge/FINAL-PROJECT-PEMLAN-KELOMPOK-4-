//Anya Ningrum-21081010112-B081
void mod1() //membuat fungsi modul 1
{
	int pil; //mendeklarasikan variabel yang akan digunakan
	system("cls"); //menghapus outputan ketika akan memilih menu kembali
	printf("======== BRANCHING/PERCABANGAN ========\n\n\n");
	printf("Menu Program Penerapan Branching : \n\n"); //menampilkan menu-menu pilihan
	printf("1. Prediksi Jabatan Berdasarkan Nilai Tes\n2. Konversi Angka Menjadi Nama Bulan\n");
	printf("3. Konversi Nilai Huruf\n4. Bonus Belanja\n5. Rumus Luas Bangun Datar\n");
	printf("6. Kualifikasi Usia\n7. Permainan Menebak Angka\n");
	printf("(Masukkan 0 untuk kembali)\n\n");
	printf("Masukkan Pilihan Menu : ");//memasukkan pilihan menu
	scanf("%d",&pil);//menyimpan pilihan menu pada variabel pil
	system("cls");
	switch(pil)//percabangan switch-case untuk masuk kedalam fungsi tiap menu
		{
			case 1:
				pil1();//masuk kedalam fungsi pil1
				break;//untuk menutup fungsi case
			case 2:
				pil2();//masuk kedalam fungsi pil2
				break;//untuk menutup fungsi case
			case 3:
				pil3();//masuk kedalam fungsi pil3
				break;//untuk menutup fungsi case
			case 4:
				pil4();//masuk kedalam fungsi pil4
				break;//untuk menutup fungsi case
			case 5:
				pil5();//masuk kedalam fungsi pil5
				break;//untuk menutup fungsi case
			case 6:
				pil6();//masuk kedalam fungsi pil6
				break;//untuk menutup fungsi case
			case 7:
				pil7();//masuk kedalam fungsi pil7
				break;//untuk menutup fungsi case
			default:
				break;
			}
}

void pil1()//membuat fungsi pilihan 1
{
	int nilai; //deklarasi variabel yang akan digunakan
	printf("masukkan nilai tes = "); //memasukkan nilai
	scanf("%d",&nilai);//menyimpan nilai dalam variabel nilai
	printf("\n");
	
	if(nilai>=1&&nilai<=5)//melakukan branching sesuai dengan kondisi
	{
		printf("Operator");
	}
	else if(nilai>=6&&nilai<=8)
	{
		printf("Staff");
	}
	else if(nilai>=8&&nilai<=10)
	{
		printf("Eksekutif");
	}
	else if(nilai>=11&&nilai<=13)
	{
		printf("Senior Eksekutif");
	}
	else if(nilai>=14&&nilai<=16)
	{
		printf("Asisten Manager");
	}
	else if(nilai>=17&&nilai<=20)
	{
		printf("Manager");
	}
	else//kondisi untuk pilihan yang salah
	{
		printf("inputan salah!");
	}
}

void pil2()//membuat fungsi pilihan 2
{
	int angka;//mendeklarasikan variabel yang akan digunakan
	printf("masukkan angka = ");//memasukkan angka
	scanf("%i",&angka);//menyimpan angka dalam variabel angka
	
	if(angka==1)//membuat branching sesuai urutan angka bulan 
	{
		printf("Januari");
	}
	else if(angka==2)
	{
		printf("Februari");
	}
	else if(angka==3)
	{
		printf("Maret");
	}
	else if(angka==4)
	{
		printf("April");
	}
	else if(angka==5)
	{
		printf("Mei");
	}
	else if(angka==6)
	{
		printf("Juni");
	}
	else if(angka==7)
	{
		printf("Juli");
	}
	else if(angka==8)
	{
		printf("Agustus");
	}
	else if(angka==9)
	{
		printf("September");
	}
	else if(angka==10)
	{
		printf("Oktober");
	}
	else if(angka==11)
	{
		printf("November");
	}
	else if(angka==12)
	{
		printf("Desember");
	}
	else//kondisi jika memasukkan selain angka 1-12
	{
		printf("inputan salah!");//menampilkan "inputan salah!" jika memasukkan selain angka 1-12
	}
}

void pil3()//membuat fungsi pilihan 3
{
	int nilai;//mendeklarasikan variabel yang akan digunakan
	printf("masukkan nilai = ");//memasukkan nilai
	scanf("%i",&nilai);//menyimpan nilai dalam variabel nilai
	
	if(nilai>=80&&nilai<=100)//membuat branching sesuai kondisi nilai
	{
		printf("A");
	}
	else if(nilai>=65&&nilai<=79)
	{
		printf("B");
	}
	else if(nilai>=50&&nilai<=64)
	{
		printf("C");
	}
	else if(nilai>=35&&nilai<=49)
	{
		printf("D");
	}
	else if(nilai>=0&&nilai<=34)
	{
		printf("E");
	}
	else//jika kondisi tidak memenuhi
	{
		printf("inputan salah!");
	}
}

void pil4()//membuat fungsi pilihan 4
{
	int total_pembelian,jumlah_barang;//mendeklarasikan variabel yang akan digunakan 
	printf("total pembelian = ");//memasukkan total pembelian
	scanf("%i",&total_pembelian);//menyimpan total pembelian dalam variabel total_pembelian
	printf("jumlah barang belanjaan = ");//memasukkan jumlah barang belanjaan
	scanf("%i",&jumlah_barang);//menyimpan jumlah barang belanjaan dalam variabel jumlah_barang
	
	if(total_pembelian>=500000&&jumlah_barang>5)//membuat branching sesuai kondisi
	{
		printf("Selamat Anda Mendapatkan Setrika!");
	}
	else if(total_pembelian>=100000&&jumlah_barang>3)
	{
		printf("Selamat Anda Mendapatkan Payung!");
	}
	else if(total_pembelian>=50000&&jumlah_barang>2)
	{
		printf("Selamat Anda Mendapatkan Pena!");
	}
	else//jika kondisi tidak terpenuhi
	{
		printf("Maaf Anda Tidak Mendapatkan Bonus Pembelanjaan");
	}
}

void pil5()//membuat fungsi pilihan 5
{
	int pilihan;//mendeklarasikan variabel yang akan diguanakan
	printf("=====MENU PERHITUNGAN LUAS BANGUN DATAR===== \n");//menampilkan menu perhitungan luas bangun datar
	printf("1. luas segitiga \n");
	printf("2. luas persegi \n");
	printf("3. luas persegi panjang \n");
	printf ("masukkan pilihan perhitungan luas bangun datar : ");//memasukkan pilihan menu
	scanf("%i",&pilihan);//memasukkan pilihan menu dalam variabel pilihan
	switch(pilihan)//membuat brancing menggunakan fungsi switch-case-break
	{
		case 1:
		float alas,tinggi,luas_segitiga;//mendeklarasikan variabel yang akan diguanakan
		printf("masukkan nilai alas : ");//memasukkan nilai alas
		scanf("%f",&alas);//memasukkan nilai alas dalam variabel alas
		printf("masukkan nilai tinggi : ");//memasukkan nilai tinggi
		scanf("%f",&tinggi);//memasukkan nilai tinggi dalam variabel tinggi
		luas_segitiga=0.5*alas*tinggi;//menghitung luas segitiga dan memasukkan dalam variabel luas_segitiga
		printf("Luas Segitiga : %.2f",luas_segitiga);//menampilkan luas segitiga
		break;//menutup case
		
		case 2:
		float sisi,luas_persegi;//mendeklarasikan variabel yang akan diguanakan
		printf("masukkan nilai sisi : ");//memasukkan nilai sisi
		scanf("%f",&sisi);//memasukkan nilai sisi dalam variabel sisi
		luas_persegi=sisi*sisi;//menghitung luas persegi dan memasukkan dalam variabel luas_persegi
		printf("Luas Persegi : %.2f",luas_persegi);//menampilkan luas persegi
		break;//menutup case
		
		case 3:
		float panjang,lebar,luas_persegipanjang;//mendeklarasi variabel yang akan digunakan
		printf("masukkan nilai panjang : ");//memeasukkan nilai panajang
		scanf("%f",&panjang);//memasukkan nilai panjang dalam variabel panjang
		printf("masukkan nilai lebar : ");//memasukkkan nilai lebar
		scanf("%f",&lebar);//memasukkan nilai lebar pada variabel lebar
		luas_persegipanjang=panjang*lebar;//menghitung luas persegi panjang dan menyimpan pada variabel luas_persegipanjang
		printf("Luas Persegi Panjang : %.2f",luas_persegipanjang);//menampilkan luas persegi panjang
		break;//menutup fungsi case
	}
}

void pil6()//membuat fungsi pilihan 5
{
	int usia;//mendeklarasikan variabel yang akan digunakan 	
	printf("masukkan usia Anda : ");//memasukkan usia 
	scanf("%d",&usia);//menyimpan nilai usia ke dalam variabel usia
	
	if(usia>=1&&usia<=16)//membuat branching sesuai dengan kondisi
	{
		printf("Anda anak-anak");
	}
	else if(usia>=17&&usia<=25)
	{
		printf("Anda remaja");	
	}
	else if(usia>=26&&usia<45)
	{
		printf("Anda dewasa");	
	}
	else if(usia>=45)
	{
		printf("Anda tua banget");	
	}
}

void pil7()//membuat fungsi pilihan 7
{
	int n=34;//mendeklarasikan variabel yang akan digunakan
	int i;//mendeklarasikan variabel yang akan digunakan
	printf("Anda hanya memiliki 3 kali kesempatan menjawab\n\n");//menampilkan peraturan permainan
	printf("tebaklah angka sesuai dengan intuisi Anda = ");//memasukkan tebakan angka
	scanf("%i",&i);//menyimpan tebakan angka ke dalam variabel i
	printf("\n");
	if(i==n)//membuat branching untuk mengecek apakah i = n (nilai hasil)
	{
		printf("Benar!");//jika kondisi memenuhi akan menampilkan "Benar!"
	}
	else//jika kondisi tidak memenuhi
	{
		printf("Salah! Kesempatan mejawab anda tinggal 2 \n");//menampilkan informasi kesempatan menjawab
		printf("Petunjuk = 2 angka yang saling berurutan \n");//menampilkan clue jawaban
		printf("Tebaklah angka tersebut : ");//memasukkan tebakan angka
		scanf("%i",&i);//menimpan nilai tebakan angka pada variabel i
		printf("\n\n");
		if(i==n)//membuat branching ke 2 untuk mengecek apakah i = n (nilai hasil)
		{
			printf("Benar!");//jika kondisi memenuhi akan menampilkan "Benar!"
		}
		else//jika kondisi tidak memenuhi
		{
			printf("Salah! Kesempatan mejawab anda tinggal 1 \n");//menampilkan informasi kesempatan menjawab
			printf("Petunjuk = jumlah provinsi di Indonesia \n");//menampilkan clue jawaban
			printf("Tebaklah angka tersebut : ");//memasukkan nilai tebakan angka
			scanf("%i",&i);//menimpan nilai tebakan angka pada variabel i
			printf("\n\n");
			if(i==n)//membuat branching ke 2 untuk mengecek apakah i = n (nilai hasil)
			{
				printf("Benar!");//jika kondisi memenuhi akan menampilkan "Benar!"
			}
			else//jika kondisi tidak memenuhi
			{
				printf("Maaf, kesempatan menjawab Anda telah habis\n");
				printf("Jawaban = 34");
			}
		}
	}
}



