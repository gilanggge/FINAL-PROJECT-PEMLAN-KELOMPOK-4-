}


// nomor 3
//fungsi untuk nomor 3, menampilkan deret fibonanci
int batas, deret[100], total=0,i;
int fibonanci()
{
	for(i=0;i<batas;i++)// looping
	{	
       	if(i<2){
           	deret[i]=1;
       	}else{
           	deret[i]=deret[i-2]+deret[i-1];
       	}
		total= total + deret[i];
    	printf("%d ", deret[i]);
	}
	printf("\nTotal deret : %d", total); // 
}
//
void pil3c()// fungsi no 3
{
	printf("--MENAMPILKAN DERET FIBONANCI--\n\n");
	printf("Masukan jumlah deret : ");
    scanf("%d", &batas);
    printf("Deret fibonanci : ");  
    fibonanci();// memanggil fungsi fibonaci
}


// nomor 4
//fungsi untuk nomor 4, untuk mencari bilangan prima
int bil_prima(int n){
	int k=2, output=0;	
	while (output < n)
	{
		int x = 0;
		int i;
		for (i=1; i<=k; i++)
		{
			if (k%i == 0)
			{
				x++;
			}
		}
		if (x == 2)
		{
			printf("%i ",k);
			output++;
		}
		k++;
	}
}
// fungsi no 4
void pil4c(){
	int n;
	printf("--MENAMPILKAN BILANGAN PRIMA--\n\n");	
	printf("n: ");
	scanf("%i", &n);
	bil_prima(n); //memanggil fungsi bil_prima
}

