void mod4()
{
	int menu;
	system("cls");
 	printf ("MENU MODUL 4 \n");
	printf("1. Soal 1\n");
	printf("2. Soal 2\n");
	printf("3. Soal 3\n");
	printf("4. Soal 4\n");
	printf("5. Soal 5 A\n");
	printf("6. Soal 5 B\n");
	printf("(Masukkan 0 untuk kembali)\n");
	printf("========================\n");
	printf("Pilih Menu: "); scanf("%d", &menu); //menginput menu yang ingin di pilih
	printf("\n");	
	system("cls");
	
	switch(menu) //fungsi switch untuk memilih menu
	{
		case 1:
			soal1();//masuk kedalam fungsi soal 1
			break;
		case 2:
			soal2(); //masuk kedalam fungsi soal 2
			break;
		case 3:
			soal3(); //masuk kedalam fungsi soal 3
			break;
		case 4:
			soal4(); //masuk kedalam fungsi soal 4
			break;
		case 5:
			soal5a(); //masuk kedalam fungsi soal 5a
			break;
		case 6:
			soal5b(); //masuk kedalam fungsi soal 5b
			break;
		default:
			break;
	}	
	system("cls");
}
 
 void soal1() //membuat fungsi soal1
 {
 	printf("Soal 1 Modul 4\n\n");
 	
 	int data [50]; //mendeklarasikan variabel dengan tipe data int
	int a,b;
	int max,min;
	float jumlah,average; //mendeklarasikan variabel dengan tipe data float
	
	printf("Jumlah Bilangan yang Dimasukkan: "); //menginputkan jumlah bilangan yang ingin di inputkan
	scanf("%d",&a);
	printf("\n");
	 
	for(b=1;b<=a;b++){ //fungsi ini melakukan perulangan hingga nilai kurang dari = a untuk menginputkan nilai bilangan, jika nilai bernilai true akan terus menjalankan perulangan dan jika nilai false akan berhenti perulangan tersebut
		printf("Bilangan Ke-%d:",b); //menginputkan bilangan
	 	scanf("%d",&data [b]);
	}
	for(b=1;b<=a;b++){ // fungsi untuk menjumlahkan data yang di unputkan menggunakan perulangan for, jika nilai bernilai true akan terus menjalankan perulangan dan jika nilai false akan berhenti perulangan tersebut
	 	jumlah += data[b]; //menjumlahkan data dari index data [b]
	}
	max=data[1]; 
	min=data[1];
	 
	for(b=1;b<=a;b++){ //fungsi untuk mensotir nilai terbesar dan terkecil menggunakan perulangan for, jika nilai bernilai true akan terus menjalankan perulangan dan jika nilai false akan berhenti perulangan tersebut
		if(data[b]>=max){ // fungsi if else untuk menentukan nilai yang di inputkan sebelumnya apakah terbesar
	 	max=data[b];
	 	}else if (data[b]<=min){ //fungsi apabila nilai tersebut merupakan nilai terkecil
			min=data[b];
 		}
	}

	average = jumlah/a; //fungsi untuk menghitung rata rata bilangan yang di inputkan
	printf("\nRata-rata = %.2f", average); //menampilkan rata rata bilangan
	printf("\nNilai Tertinggi:%d",max); //menampilkan nilai terbesar
	printf("\nNilai Terendah:%d",min); //menampilkan nilai terkecil
 	
 	printf("\n\n");
 }
 
 void soal2() //membuat fungsi soal2
 {
 	printf("Soal 2 Modul 4\n\n");
 	int a,b; //mendeklarasikan variabel
	float suhu[7],kelembaban[7];
	printf("Suhu Rumah Kaca\n");
	for(a=0;a<=6;a++) //fungsi perulangan for dari a = 0 hingga a <= 6.
	{
		printf("Hari ke-%i : ",a+1); //menginput suhu dari hari 1 hingga 7
		scanf("%f",&suhu[a]);
	}
	printf("\n");
	printf("Kelembaban Rumah Kaca\n");
	for(b=0;b<=6;b++) //fungsi perulangan for dari b = 0 hingga b <= 6, jika nilai bernilai true akan terus menjalankan perulangan dan jika nilai false akan berhenti perulangan tersebut
	{
		printf("Hari ke-%i : ",b+1);
		scanf("%f",&kelembaban[b]); //menginput kelembaman dari hari 1 hingga 7
	}
	printf("\n");
	
	//output
	printf("Suhu Rumah Kaca hari 1-7 \n");
	for(a=0;a<=6;a++) //fungsi perulangan for dari a = 0 hingga a <= 6, jika nilai bernilai true akan terus menjalankan perulangan dan jika nilai false akan berhenti perulangan tersebut
	{
		printf("%i \n",suhu[a]); //menampilkan suhu dari hari 1 - 7

	}
	printf("\n");
	printf("Kelembaban Rumah Kaca hari 1-7 \n");
	for(b=0;b<=6;b++) //fungsi perulangan for dari b = 0 hingga b <= 6, jika nilai bernilai true akan terus menjalankan perulangan dan jika nilai false akan berhenti perulangan tersebut
	{
		printf("%i \n",kelembaban[b]); //menampilkan kelembaman dari hari 1 - 7
	}
 	printf("\n\n");
 }
 
 void soal3() //membuat fungsi soal3
 {
 	printf("Soal 3 Modul 4\n\n");
 	
	 int a,b,suhu[7],kelembapan[7]; //mendeklarasikan variabel tipe data int
	float jumlah,average,jumlah2,average2; //mendeklarasikan variabel tipe data float
	printf("Suhu & Kelembapan Rumah Kaca\n");
		
	for(a=1;a<=7;a++) //fungsi perulangan for dari a = 1 hingga a <= 7, jika nilai bernilai true akan terus menjalankan perulangan dan jika nilai false akan berhenti perulangan tersebut
	{
		printf("Hari %i :\n",a);
		scanf("%i %i",&suhu[a],&kelembapan[b]); //menginputkan suhu dan kelembapan selama 7hari 
		jumlah += suhu[a]; //menjumlah total seluruh suhu
		jumlah2 += kelembapan[b]; //menjumlah total seluruh kelembapan
		
	}
	printf("\n");
	average = jumlah/7; //fungsi membuat rata rata suhu
	printf("Rata-rata suhu = %.2f\n", average); //menampilkan rata rata suhu
	average2 = jumlah2/7; //fungsi membuat rata rata kelembapan
	printf("Rata-rata kelembapan = %.2f\n", average2); //menampilkan rata rata kelembapan
 	printf("\n\n");
 }
 
 void soal4() //membuat fungsi soal4
 {
 	printf("Soal 4 Modul 4\n\n");
 	
 	int fn[50], fn1, fn2, m, n, o; //mendeklarasikan variabel tipe data int
	printf("Batas Bilangan Fibonaci :");
	scanf("%i",&n); //menginputkan batas bilangan fibonaci
	fn1 = 1;  //mendeklarasikan variabel = 1
	fn2 = 1;	
	printf("%d ", fn1);	
	printf("%d ", fn2);	
	fn[o] = fn1 + fn2; //fungsi bilangan fibonaci dari fn[0]
	for(m=1;m<n;m++) //fungsi for dari m=1 hingga m,n untuk memberikan batas pada bilangan fibonaci, jika nilai bernilai true akan terus menjalankan perulangan dan jika nilai false akan berhenti perulangan tersebut
	{		
		printf("%d ", fn[o] ); //menampilkan bilangan fibonaci
		fn2 = fn1; //meggantikan nilai fn1 dengan fn2
		fn1 = fn[o]; //meggantikan nilai fn[0] dengan fn1		
		fn[o] = fn1 + fn2; //mmenjumlahkan fn1 + fn2 = fn[0] (hasil bilangan fibonaci yang baru)
	}	
	printf("\n\n");	
 }
 
 void soal5a() //membuat fungsi soal5a
 {
 	printf("Soal 5 A Modul 4\n\n");
 	
 	int harga,jumlah,pembayaran,i,n; //mendeklarasikan variabel tipe data int
	float total; //mendeklarasikan variabel tipe data float
	char barang [20]; //mendeklarasikan variabel tipe data char
	
	printf("masukkan = ");
	scanf("%i",&n); //menginputkan jumlah transaksi yang ingin di lakukan
	fflush(stdin);
	for(i=0;i<n;i++) //melakukan perulangan for dari i=0 hingga i<n , jika nilai bernilai true akan terus menjalankan perulangan dan jika nilai false akan berhenti perulangan tersebut
	{
		fflush(stdin);
		printf ("nama barang : "); //menginputkan nama barang
		gets(barang);
		printf ("masukan harga : Rp."); //menginputkan harga barang
		scanf ("%d", &harga);
		printf ("masukan jumlah : "); //menginputkan jumlah barang
		scanf (" %d", &jumlah); 
		
		total = harga*jumlah; //rumus menghitung total harga
		printf ("\n");
	}
	
	printf ("=====================================\n");
	printf ("|         Total Pembayaran          |\n");
	printf ("=====================================\n");
	printf ("barang\t\t\t\t%sx%d\n", barang, jumlah); //menampilkan nama barang, jumlah barang, dan total harga
	printf ("total harga\t\t\t%.f", total);
	printf ("\n\n");
	printf ("|            Terima Kasih           |\n");
	printf ("=====================================\n");
 	printf("\n\n");
 }
 
 void soal5b() //membuat fungsi soal5b
 {
 	printf("Soal 5 B Modul 4\n\n");
 	
	 long int total=0; //mendeklarasikan variabel tipe data int
	int n;
	
	printf("Beli Berapa Barang : "); 
	scanf("%d", &n); //menginputkan berang barang yang ingin di beli
	
	long int item[n],jumlah[n];

	for(int i=1;i<=n;i++){ //melakukan perulangan for dari i=1 hingga i<n, jika nilai bernilai true akan terus menjalankan perulangan dan jika nilai false akan berhenti perulangan tersebut
		printf("\nBarang ke-%i\n",i);
		printf("Harga Barang  : Rp."); //menginputkan harga barang
		scanf("%li", &item[i]);
		printf("Banyak Barang : "); //menginputkan jumlah barang
		scanf("%li", &jumlah[i]);
		
		total+=item[i]*jumlah[i]; //menginputkan total harga barang
	}
	printf("\n");
	printf("======APOTEK SUKA MAJU======\n\n");
	for(int i=1;i<=n;i++){ //melakukan perulangan for dari i=1 hingga 1<=n, jika nilai bernilai true akan terus menjalankan perulangan dan jika nilai false akan berhenti perulangan tersebut
		printf("Harga barang ke-%d : %li x %d",i,item[i],jumlah[i]); //mencetak harga barang, jumlah transaksi, dan total barang
		printf("\n");
	}
	printf("Estimasi total biaya : %li",total); //menampilkan total harga
 	printf("\n\n");
 }

 
