//nomor 5
char x [50];
char y [11];
char z [20];

// fungsi untuk nomor 5, untuk mengoutput data mahasiswa
int data()
{
	printf("       DATA MAHASISWA       \n");
	printf("============================\n");
	printf("NAMA\t= %s\n",x);
	printf("NPM\t= %s\n",y);
	printf("JURUSAN\t= %s\n",z);
	printf("============================\n");;
	getch();
	system("cls");
}
void pil5c() // fungsi no 5
{
	int i,j;
	printf("--MENGINPUT DATA MAHASISWA--\n\n");
	printf("Berapa Mahasiswa = ");
	scanf("%d",&j);
	fflush(stdin);
	
	for(i=1;i<=j;i++){
		printf("\nMahasiswa ke-%d \n",i);
		printf("Siapakan nama anda? ");
		gets(x);
		printf("Berapaa NPM anda? ");
		gets(y);
		printf("Apa jurusan anda? ");
		gets(z);
		printf("\n\n");
		data();// memanggil fungsi data
	}
}



