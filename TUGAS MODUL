#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <conio.h>

//UTS PEMLAN KELOMPOK

void mod1();//mendeklarasikan fungsi-fungsi yang akan digunakan
void mod2();
void mod3();
void mod4();
void mod5();
void mod6();
void mod7();

int main()//fungsi main
{
	char brp;//mendeklarasikan variabel yang akan diguanakan
	do{//melakukan looping dengan menggunakan fungsi do-while
		system("cls");
		printf("=== PEMROGRAMAN LANJUT ===\n");//menampilkan menu modul yang dapat dipilih
		printf("      1. MODUL 1\n");
		printf("      2. MODUL 2\n");
		printf("      3. MODUL 3\n");
		printf("      4. MODUL 4\n");
		printf("      5. MODUL 5\n");
		printf("      6. MODUL 6\n");		
		printf("      7. MODUL 7\n");
		printf(" MASUKAN (q) UNTUK EXIT\n\n");//pilihan untuk keluar program
		printf("Masukkan Pilihan Nomor : ");//memasukkan pilihan nomor menu
		scanf("%c",&brp);//menyimpan pilihan nomor menu ke dalam variabel brp
		switch(brp)//membuat branching untuk masuk ke dalam menu yang dipilih menggunakan fungsi switch-case-break
		{
			case '1'://masuk ke dalam pilihan 1
				mod1();//masuk ke fungsi modul 1
				printf("Tekan Enter Untuk Lanjut");
				getch();// digunakan untuk membaca data karakter. Karakter yang dimasukkan tidak perlu diakhiri dengan penekanan tombol enter.
				break;
			case '2'://masuk ke dalam pilihan 2
				mod2();//masuk ke fungsi modul 2
				printf("Tekan Enter Untuk Lanjut");
				getch();// digunakan untuk membaca data karakter. Karakter yang dimasukkan tidak perlu diakhiri dengan penekanan tombol enter.
				break;
			case '3'://masuk ke dalam pilihan 3
				mod3();//masuk ke fungsi modul 3
				printf("Tekan Enter Untuk Lanjut");
				getch();// digunakan untuk membaca data karakter. Karakter yang dimasukkan tidak perlu diakhiri dengan penekanan tombol enter.
				break;
			case '4'://masuk ke dalam pilihan 4
				mod4();//masuk ke fungsi modul 4
				printf("Tekan Enter Untuk Lanjut");
				getch();// digunakan untuk membaca data karakter. Karakter yang dimasukkan tidak perlu diakhiri dengan penekanan tombol enter.
				break;
			case '5'://masuk ke dalam pilihan 5
				mod5();//masuk ke fungsi modul 5
				printf("Tekan Enter Untuk Lanjut");
				getch();// digunakan untuk membaca data karakter. Karakter yang dimasukkan tidak perlu diakhiri dengan penekanan tombol enter.
				break;
			case '6'://masuk ke dalam pilihan 6
				mod6();//masuk ke fungsi modul 6
				printf("Tekan Enter Untuk Lanjut");
				getch();// digunakan untuk membaca data karakter. Karakter yang dimasukkan tidak perlu diakhiri dengan penekanan tombol enter.
				break;
			case '7'://masuk ke dalam pilihan 7
				mod7();//masuk ke fungsi modul 7
				printf("Tekan Enter Untuk Lanjut");
				getch();// digunakan untuk membaca data karakter. Karakter yang dimasukkan tidak perlu diakhiri dengan penekanan tombol enter.
				break;
			default:
				break;
		}
	}while (brp != 'q');
	return 0;
}

