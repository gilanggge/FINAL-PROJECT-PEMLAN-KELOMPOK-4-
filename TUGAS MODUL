// nomor 1
// fungsi rumus volume balok
float p,l,t,rumus;
void hasil()
{
	rumus = p*l*t;// rumus
	printf("Hasilnya adalah = %.f",rumus);
}
//
void pil1c()// fungsi no 1
{
	printf("--MENGHITUNG VOLUME BALOK-- \n\n"); // judul
	printf("Masukkan p = ");
	scanf("%f",&p);
	printf("Masukkan l = ");
	scanf("%f",&l);
	printf("Masukkan t = ");
	scanf("%f",&t);
	printf("\n");
	hasil();
}

// nomor 2
// fungsi nomor 2
int nilai;
void konversi()// fungsi untuk mengkonversi angka ke huruf
{
	if(nilai>=80){ // percabangan untuk mengecek angka
	printf("A");
	}else if(nilai>=75){
	printf("A-");
	}else if(nilai>=70){
	printf("B+");
	}else if(nilai>=66){
	printf("B");
	}else if(nilai>=62){
	printf("B-");
	}else if(nilai>=58){
	printf("C+");
	}else if(nilai>=55){
	printf("C");
	}else if(nilai>=51){
	printf("C-");
	}else{
	printf("nilai inputan salah");
	}
}
