void mod2()
{
	int pil; //deklarasi variabel pilihan soal
	printf("=======MODUL 2(PERULANGAN)======\n\n");
	printf("HASIL PEKERJAAN\n\n");
	//menampilkan pilihan soal perulangan
	printf("1.menampilkan bilangan genap dengan batasan yang merupakan inputan dari user\n");
	printf("2.program yang akan menghasilkan karakter ( * ) \n");
	printf("3.menghitung banyaknya bilangan genap dan ganjil \n");
	printf("4.program yang dapat membentuk formasi (dalam soal dengan inputan 4\n)");
	printf("5.program yang dapat membentuk formasi (dalam soal dengan inputan 4\n)");
	printf("6.program yang dapat membentuk formasi dalam hasil * (dalam soal dengan inputan 4\n)");
	printf("7.program yang dapat menerima dan menjumlahkan data matriks 2x2 berdasarkan inputan user\n");
	printf("8.no 3 dari modul 4 dengan memberikan fitur untuk mengulangi proses penghitungan sekali lagi atau tidak.");
	printf("Masukkan Pilihan soal perulangan : "); //memasukan soal perulangan yang ingin dikerjakan
	scanf("%d",&pil); //menyimmpan soal  yang ingin dikerjakan atau dipillih
	system("cls");
	switch(pil)//pemanggilan ekspresi soal yang dipilih 
	{
				case 1: //perintah mengerjakan soal nomer 1 
				pil1b();
				break;
			case 2: //perintah mengerjakan soal nomer 2
				pil2b();
				break;
			case 3: //perintah mengerjakan soal nomer 3
				pil3b();
				break;
			case 4: //perintah mengerjakan soal nomer 4
				pil4b();
				break;
			case 5: // perintah mengerjakan soal nomer 5
				pil5b();
				break;
			case 6: //perintah mengerjekan soal nomer 6
				pil6b();
				break;
			case 7: //perintah mengerjakan soal nomer 7
				pil7b();
				break;
			case 8: //perintah mengerjakan soal nomer 8
				pil8b();
				break;
			default:
				break;
	}
}

void pil1b() //memanggil dan menjalankan pilihan nomer 1 
{
	int a,b; //deklarasi variabel a dan b 
    printf("Mencari angka-angka kelipatan 2\n");
    printf("---------------------------\n");
    printf("Masukan batas kelipatan yang diinginkan:",a); //memasukan batas kelipatan yang diinginkan oleh user
    scanf("%d",&b); //penyimpanan variabel b
    for(a=1;a<=b;a++) //melakukan pengulangan dengan setiap a akan dikali dengan 2 sampai batas yang telah ditentukan
    {
        printf("%d\n",a*2);
    }
}

void pil2b() //memanggil dan menjalankan pilihan soal nomer 2
{
		int i,j; //deklarasi variabel
	for(i=1;i<=4;i++) //melakukan pengulangan yang kedua dimana i telah ditentukan=1 dan i sampai dengan 4
	{
		for(j=1;j<=i;j++) //melkakukan pengulangan yang pertama dimana j=1 dan outputnya akan berupa * 
		{
			printf("*");
		}
		printf("\n");
	}
}

void pil3b() //memanggil dan menjalankan program 3
{
		int n, m, a, b=0, c=0; //deklarasi variabel 
	printf("Berapa banyak angkanya : "); //menginputkan banyak angka yang akan diinputkan
	scanf("%i",&n); //menyimpan variabel inputan n
	printf("\n"); 
	for(int x=0;x<n;x++) //melakukan pengulangan sampai batas n atau inputan
	{
		printf("Masukkan angka: "); //memasukan angka yang ingin diinputkan
		scanf("%d",&m); //melakukan penyimpanan
		a=m%2; //melakukan penghitungan data
		if(a==0){ //dimana menghitung banyak angka genap
			b=b+1;
		}else{//dimana menghitung angka ganjil
			c=c+1;
		}
	}
	printf("\nBanyak Angka genap = %d\n",b); //memanggil hasil sebagai output
	printf("Banyak Angka ganjil = %d",c);
}
void pil4b()//memanggil dan menjalankan program 4
{
		int i,j; //deklarasi variabel batas telah ditentukkan 
	for(i=1;i<=4;i++) //melakukan pengulangan yang bariss (pengulangan kedua)
	{
		for(j=1;j<=i;j++) //melakukan pengulangan yang kedua kolom (pengulangan pertama)
		{
		printf("%i",i);
		}
		printf("\n");
	}//outputnya akan membentuk hasil yang diinginkan

}
void pil5b() //memanggil dan menjalankan program 5
{
	    int batas, x, y; //deklarasi variabel
    printf("Masukan batas angka : "); //memasukan batas angka yang ditentukan
    scanf("%d", &batas);//menyimpan batas yang ditentukan

    printf("\n");

    for (x = 0; x <= batas; x++)//melakukan pengulangan kedua untuk barisnya
    {
        for (y = 1; y <= x; y++) //melakukan pengulangan pertama unytuk kolom dengan variabel yang telah ditentukan
        {
            printf("%d", y);
        }
        printf("\n");
    }

}

void pil6b() //memanggil dan menjalakan program 6
{
		int i,j; //deklarasi variabel 
	for(i=4;i>=1;i--) //melakukan pengulangan yang kedua
	{
		for(j=1;j<=i;j++) //melakukan pengulangan pertama dengan outputnya nanti *
		{
			printf("*");
		}
		printf("\n");
	}

}
void pil7b() //memanggil dan menjalankan program 5
{
	int a, b, c, d, matriks1[50][50], matriks2[50][50], total[10][10]; //deklarasi variabel
	printf("masukan baris matriks:"); //input jumlah baris matriks
	scanf("%d", &c); //menyimpan
	printf("masukan kolom matriks:"); //input jumlah kolom
	scanf("%d", &d); //menyimpan
	
	printf("masukan elemen matriks1 mulai dari baris 1 sampai baris terahir: \n"); //memasukan elemmen matriks dari baris 1
	for (a=0; a<c; a++) //melakukan pengulangan untuk baris nya 
	{
		for(b=0; b<d; b++) //mellakukan pengulangan pertama untuk kolom 
		{
			scanf("%d", &matriks1[a][b]); //menyimpan inputan matriks
		}
		printf("\n");
	}
	printf("masukan elemen matriks 2 mulai baris 1 sampai terahir  : \n"); //masukan elemen matrik kedua
	for(a=0; a<c; a++) //dilakukan pengulangan kedua untuk baris matriks
	{
		for(b=0; b<d; b++) //dilakukan pengulangan pertama untuk kolom
		{
			scanf("%d", &matriks2[a][b]);
		}
		printf("\n");
	}
	printf("hasil jumlah: \n"); //melakukan penjumlahan 2 matriks yang telah diinputkan
	for(a=0; a<c; a++)//pengulangan untuk penjumlahan baris (pengulangan ke-2)
		{
		for(b=0; b<d; b++) //pengulangan dilakukan penjumlahan kolom sesuai denggan rumus penjumlahan matriks
		{
			total[a][b]=matriks1[a][b]+matriks2[a][b];
			printf("%d \t", total[a][b]);
		}
		printf("\n");
	}

}
void pil8b() //memanggil dan menjalankan soal nomer 8
{
	
	int a,b;
	int suhu[7],kelembaban[7];
	//deklarasi variabel
	printf("Suhu Rumah Kaca\n");
	for(a=0;a<=6;a++) //pengulangan untuk inputan suhu
	{
		printf("Hari ke-%i : ",a+1); //hari sampai ke-7
		scanf("%i",&suhu[a]); //menyimpan inputan suhu
	}
	printf("\n"); 
	printf("Kelembaban Rumah Kaca\n");
	for(b=0;b<=6;b++) //pengulangan untuk kelembapan
	{
		printf("Hari ke-%i : ",b+1); //inputan untuk hari 1-7
		scanf("%i",&kelembaban[b]);//menyimpan inputam
	}
	
	//output
	printf("Suhu Rumah Kaca hari 1-7 \n"); //menampilkan hasil outputan
	for(a=0;a<=6;a++) //pengulangan untuk outputan suhu
	{
		printf("%i \n",suhu[a]); //memanggil outputan suhu yang dimasukan tadi

	}
	printf("\n");
	printf("Kelembaban Rumah Kaca hari 1-7 \n"); //menampilkan hasil outputan kelembapan
	for(b=0;b<=6;b++) //pengulangan untuk hasil kelembapan
	{
		printf("%i \n",kelembaban[b]); //memanggil outputan kelembapan tadi
	}
	printf("\n");
}

